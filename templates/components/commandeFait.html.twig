    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <h2 class="d-flex justify-content-around align-items-center"> Commande Reçu </h2>
            <div class="row">
                    <ul class="ml-4">
                        <p> Merci. Votre commande a été reçue. </p>
                        <li> Numéro de commande : <strong>{{achat.id}}</strong> </li>
                        <li> Date commande : <strong>{{achat.CreatedAt | date('d/m/y')}} </strong> à <strong>{{achat.CreatedAt | date('H:i')}}</strong> </li>
                        <li> E-mail : <strong>{{achat.user.email}} </strong> </li>
                        <li> Total : <strong>{{achat.PrixAchat}} fcfa </strong> </li>
                        <li> Mode de paiement : <strong>{{achat.typeReglement.typeReglement}} </strong> </li>
                    </ul>
            </div>
            <br>
            <div class="row table-responsive">
                <h3 class="text-align-left"> Details de la Commande </h3>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Produits</th>
                        <th scope="col">Prix Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for achats in achat %}
                            <tr>
                                <td>{{achat.details.produit.nomProduit}} x {{achat.details.quantite}}</td>
                                <td>{{achat.details.produit.prix * achat.details.quantite }}</td>
                            </tr>
                        {% endfor %}
                            <tr>
                                <td><strong>Sous Total</strong></td>
                                <td>{{achat.PrixAchat}}</td>
                            </tr>
                            <tr>
                                <td><strong>Moyen de paiement</strong></td>
                                <td>{{achat.typeReglement.typeReglement}}</td>
                            </tr>
                            <tr>
                                <td><strong>Total</strong></td>
                                <td>{{achat.PrixAchat}}</td>
                            </tr>
                    </tbody>
                </table>
                <div >
                    <h3> Adresse de livraison </h3> <br>
                    {{achat.user.nom }} {{achat.user.prenom }}  <br>
                    {{achat.user.adresse }} <br>
                    {{achat.user.pays }} <br>
                    {{achat.user.ville }} <br>
                 </div>
                
            </div>
        </div>
    </section>