    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Les Categories </h4>
                            <ul>
                                {% for  categorie in categories %}
									<li><a href="{{path('boutique_cat',{ 'id': categorie.id } )}}"> {{categorie.libelleCat}}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="sidebar__item">
                            <div class="latest-product__text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Products</h2>
                        </div>
                        <div class="row">
							<div class="product__discount__slider owl-carousel">
								{% for produit in produits %}
									<div class="col-lg-4">
										<div class="product__discount__item">
											<div class="product__discount__item__pic set-bg"
												data-setbg="{{produit.image}}">
												<div class="product__discount__percent">New</div>
												<ul class="product__item__pic__hover">
													<li><a href="#"><i class="fa fa-heart"></i></a></li>
													<li><a href="#"><i class="fa fa-retweet"></i></a></li>
													<li><a href="{{path('Details', { 'id': produit.id } )}}"><i class="fa fa-shopping-cart"></i></a></li>
												</ul>
											</div>
											<div class="product__discount__item__text">
												<span>{{produit.categorieproduit.libelleCat}}</span>
												<h5><a href="#">{{produit.nomProduit}}</a></h5>
												<p> {{produit.Caracteristiques}} </p>
												<div class="product__item__price"> {{produit.prix}} <span> {{produit.prix}}</span></div>
											</div>
										</div>
									</div>
								{% endfor %}
                            </div>
                    	</div>
					</div>
                    <div class="product__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>